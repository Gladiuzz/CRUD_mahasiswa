<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="90dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/student1"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:id="@+id/Lihat_Data"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/stylebutton1"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_archive_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_1"
                android:text="LIHAT DATA"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Input_data"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/stylebutton2"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add_box_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_2"
                android:text="INPUT DATA"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Informasi"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/stylebutton3"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/img_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_info_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_3"
                android:text="INFORMASI"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:textColor="@android:color/white"/>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>